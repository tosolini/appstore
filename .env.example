# FastAPI Server
HOST=0.0.0.0
PORT=8000

# Cache directory for repositories cloned by git-sync
CACHE_DIR=/app/cache

# Sync interval (secondi)
GIT_SYNC_INTERVAL=604800 # 7 days

# Repository configuration (JSON array)
# Format: [{"name": "RepoName", "url": "https://...", "branch": "main", "enabled": true}, ...]
REPOSITORIES=[
  {
    "name": "CasaOS",
    "url": "https://github.com/IceWhaleTech/CasaOS-AppStore.git",
    "branch": "main",
    "enabled": true
  },
  {
    "name": "LinuxServer",
    "url": "https://github.com/linuxserver/docker-templates.git",
    "branch": "master",
    "enabled": false
  },
  {
    "name": "BigBear",
    "url": "https://github.com/bigbeartechworld/big-bear-casaos.git",
    "branch": "master",
    "enabled": false
  }
]

# Portainer configuration (optional)
PORTAINER_BASE_URL=https://host.docker.internal:9443
PORTAINER_API_KEY=YOUR_API_KEY_HERE
PORTAINER_ENDPOINT_ID=3
PORTAINER_VERIFY_SSL=false
MOCK_MODE=false
DEBUG_MODE=false

